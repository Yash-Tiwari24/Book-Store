@{
    ViewData["Title"] = "All books";
}
@model IEnumerable<Book>

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to Bookstore @ViewData["CustomProperty"]</h1>

        <environment names="Development">
            <h3>Development</h3>
        </environment>

        <environment names="Production">
            <h3>Production</h3>
        </environment>
        <p class="lead text-muted">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
            quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search books</a>
        </p>
    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top books</h3>
        <div class="row">
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new Book()" />*@
                @Html.Partial("_bookThumbnail", new Book())
            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new Book()" />*@
                @await Html.PartialAsync("_bookThumbnail", new Book())

            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new Book()"/>*@
                @{
                    Html.RenderPartial("_bookThumbnail", new Book());

                }
            </div>

            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model="new Book()"/>*@
                @{
                    await Html.RenderPartialAsync("_bookThumbnail", new Book());

                }
            </div>
        </div>
    </div>
</div>


